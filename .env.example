# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/reelty?schema=public

# Database connection pool settings
PRISMA_CONNECTION_POOL_MIN=2
PRISMA_CONNECTION_POOL_MAX=10
PRISMA_CONNECTION_POOL_IDLE=60000
PRISMA_CONNECTION_TIMEOUT=30000
PRISMA_CONNECTION_RETRIES=3

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
# Important: This must match exactly with the webhook secret in your Clerk dashboard
# Go to Clerk Dashboard > Webhooks > Select your webhook > View signing secret
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET=your-bucket-name

# RunwayML
RUNWAYML_API_KEY=

# Google Maps
GOOGLE_MAPS_API_KEY=

# API Security
REELTY_API_KEY=

# Frontend
FRONTEND_URL=http://localhost:3000

# Storage
TEMP_DIR=./temp
TEMP_OUTPUT_DIR=./temp/output

# Application
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug
